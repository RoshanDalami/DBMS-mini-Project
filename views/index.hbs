<div class="row">
    <div class="col-6"><h1>Players</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/addplayer" type="button" class="btn btn-primary align-self-center">+ Add Player</a>
    </div>
</div>



<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">player_id</th>
      <th scope="col">player name</th>
      <th scope="col">age</th>
      <th scope="col">overall rating</th>
      <th scope="col">nationality</th>
      <th scope="col">In Contract</th>
      <th scope="col">Position</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each rows}}
    <tr>
      <th scope="row">{{this.player_id}}</th>
      <td>{{this.player_name}}</td>
      <td>{{this.age}}</td>
      <td>{{this.overall_rating}}</td>
      <td>{{this.nationality}}</td>
      <td>{{this.in_contract}}</td>
      <td>{{this.position}}</td>
        <td class="text-end">
            <a href="" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>view</a>
            <a href="/editplayer/{{this.player_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
            <a href="" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>